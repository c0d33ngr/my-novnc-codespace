{
    "name": "My Codespace with noVNC",
    "build": {
        "dockerfile": "Dockerfile"
    },
    /* "image": "mcr.microsoft.com/devcontainers/base:focal", // works with WSL or use `ubuntu:20.4` */
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite": {
